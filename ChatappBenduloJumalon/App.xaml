<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChatappBenduloJumalon.App"
             xmlns:local="clr-namespace:ChatappBenduloJumalon;assembly=ChatappBenduloJumalon">
    <Application.Resources>
        <ResourceDictionary>
           <local:ScaleXAML x:Key="scale"/>
            <Style x:Key="EntryCustom" TargetType="Entry">
                <Setter Property="TextColor" Value="Black"/>
                <Setter Property="Margin" Value="0"/>
                <Setter Property="HeightRequest" Value="{Binding Converter={StaticResource scale}, ConverterParameter='height=35'}"/>
            </Style>
            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="White"/>
                <Setter Property="BarTextColor" Value="White"/>
            </Style>
            <Style x:Key="EntryFrame" TargetType="Frame">
                <Setter Property="BorderColor" Value="Black"/>
                <Setter Property="WidthRequest" Value="1"/>
                <Setter Property="CornerRadius" Value="5"/>
                <Setter Property="Margin" Value="5"/>
                <Setter Property="Padding" Value="0"/>
            </Style>
           
        </ResourceDictionary>
    </Application.Resources>
</Application>