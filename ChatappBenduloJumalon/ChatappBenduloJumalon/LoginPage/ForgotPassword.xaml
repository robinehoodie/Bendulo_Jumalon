<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChatappBenduloJumalon.ForgotPassword"
             xmlns:local="clr-namespace:ChatappBenduloJumalon"
             Title="Reset Password"
             BackgroundColor="White"
             >
    
    <ContentPage.Content>
        
        <StackLayout VerticalOptions="Center">
            <Frame x:Name="loginmailframe" Style="{StaticResource EntryFrame}">
                <Entry x:Name="Email" Placeholder="Email" Text="{Binding email}" Style="{StaticResource EntryCustom}" Keyboard="Email" Focused="emailFocusedevent">
                    <Entry.PlaceholderColor>
                        <OnPlatform x:TypeArguments="Color">
                            <On Platform="iOS" Value="darkgray"></On>
                            <On Platform="Android" Value="darkgray"></On>
                        </OnPlatform>
                    </Entry.PlaceholderColor>
                </Entry>
            </Frame>
            <ActivityIndicator Color="DarkGray" x:Name="indicatorLog" IsRunning="false" IsVisible="false" WidthRequest="0" Grid.Column="1"/>
            <local:CustomButton Text="Send Reset Password Email" BackgroundColor="Green" CornerRadius="5" Margin="5" Clicked="ResetPassClicked"></local:CustomButton>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>